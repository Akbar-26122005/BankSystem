<Window x:Class="BankSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankSystem"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Window.Resources>
        <Storyboard x:Key="AccountsBorderHoverEnterStoryBoard">
            <DoubleAnimation
                Storyboard.TargetName="AccountsBorder"
                Storyboard.TargetProperty="Width"
                To="300" Duration="0:0:0.3"/>
        </Storyboard>
        <Storyboard x:Key="AccountsBorderHoverLeaveStoryBoard">
            <DoubleAnimation
                Storyboard.TargetName="AccountsBorder"
                Storyboard.TargetProperty="Width"
                To="60" Duration="0:0:0.3"/>
        </Storyboard>
    </Window.Resources>

    <Grid>
    </Grid>
</Window>
